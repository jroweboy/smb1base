{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "assemble",
            "runOptions": {
                "instanceLimit": 1
            },
            "type": "shell",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "${workspaceFolder}\\build.bat"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "${workspaceFolder}/build.sh"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": false,
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "source": "ca65",
                    "pattern": [
                        {
                            "regexp": "^(\\./.+):([\\d]+): ?(\\w*): ?(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "source": "ld65",
                    "pattern": [
                        {
                            "regexp": "^ld65: ?(.+): ?(.*) '(\\.\\/.+)', line ?([\\d]*)$",
                            "file": 3,
                            "line": 4,
                            "severity": 1,
                            "message": 2
                        }
                    ]
                },
                {
                    "owner": "ca65",
                    "applyTo": "allDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "source": "ld65",
                    "pattern": [
                        {
                            "regexp": "^ld65:(.+): ?(.*): ?([\\d]+): ?(.*)$",
                            "file": 2,
                            "line": 3,
                            "severity": 1,
                            "message": 4
                        }
                    ]
                }
            ]
        }
    ]
}